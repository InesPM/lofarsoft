 # Libraries and include paths.
 #-----------------------------------------------------------------------------
 
+#-----------------------------------------------------------
 # The C++ compiler.
-#------------------
-C++ROOT := /usr/local/gnu
 
-# General external libraries. 
-#---------------------------- 
+C++ROOT := /usr
 
+#-----------------------------------------------------------
 # TCL (version 7.6 or later).
+
+TCLROOT := /sw
 TCLLIB  += -ldl
 
+TKROOT  := /sw
+TKINCD  := $(TKROOT)/include
+TKLIBD  := $(TKROOT)/lib
+
+#-----------------------------------------------------------
 # X11.
+
 X11ROOT := /usr/X11R6
 
+#-----------------------------------------------------------
 # Motif.
-MotifROOT := $(X11ROOT)
 
+MotifROOT := /sw
+
+#-----------------------------------------------------------
 # XPM (X Pixmap) library
+
 XPMROOT  := $(X11ROOT)
 
-# FORTRAN compiler.
-# using native g77
-F77ROOT  := $(C++ROOT)
-F77LIBD  := 
+LAPACKROOT := /sw
+
+#-----------------------------------------------------------
+# FORTRAN compiler (using native g77)
+
+F77ROOT  := /sw
+F77LIBD  := $(F77ROOT)/lib/gcc/powerpc-apple-darwin8.7.0/3.4.3
 # The fortran library is fully specified to guarentee that we do not
 # link against /usr/lib/libf2c.{a,so}. This can happen if a -L/usr
 # flag appears in the library link path before -L$(F77LIBD) and F77LIB
 # is defined as -lf2c
-#F77LIB   := $(F77ROOT)/gcc-lib/powerpc-apple-darwin7.2.0/3.3/libgcc.a
+F77LIB   := $(F77ROOT)/lib/gcc/powerpc-apple-darwin8.7.0/3.4.3/libgcc.a
 
+#-----------------------------------------------------------
 # Platform-specific libraries - always added.
+
 ARCHLIBS := -lm
 
-# External libraries required by particular AIPS++ packages.
 #-----------------------------------------------------------
 # RPFITS (required by ATNF).
+
 RPFITSLIB :=
 
+#-----------------------------------------------------------
+# WCSLIB (supplied with AIPS++); clear WCSLIBTRIG to ignore wcstrig.c.
+
+WCSLIBLIB  := $(WCSLIBLIBD)/libwcs.a
+
+#-----------------------------------------------------------
+# CFITSIO (required by ATNF).
+
+CFITSIOROOT := /sw
+CFITSIOINCD  = $(CFITSIOROOT)/include/
+CFITSIOLIBD  = $(CFITSIOROOT)/lib
+
+#-----------------------------------------------------------
+# PGPLOT (FORTRAN plotting package).
+
+PGPLOTROOT := /sw
+PGPLOTINCD := $(PGPLOTROOT)/lib/pgplot
+PGPLOTLIBD := $(PGPLOTROOT)/lib/pgplot
+PGPLOTLIB  := -lcpgplot -lpgplot
+
+XmPGPLOTLIBD := $(PGPLOTLIBD)
+
