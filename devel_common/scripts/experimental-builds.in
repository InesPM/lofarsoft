#!/bin/bash

echo "-- Set environment variables ..."

export LOFARSOFT=${USG_ROOT}
. ${USG_ROOT}/devel_common/scripts/init.sh

echo "-- Cleaning up code base ..."

cd ${USG_ROOT}
rm -rf release
rm -rf build

echo "-- Updating working copy ..."

svn up

echo "-- Building projects ..."

cd ${USG_ROOT}/build
./bootstrap

make cr

echo "-- Experimental build of selected projects ..."

cd ${USG_ROOT}/build/dal && make Experimental
cd ${USG_ROOT}/build/cr && make Experimental
