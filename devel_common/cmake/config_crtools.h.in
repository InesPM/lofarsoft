/* Support for Glish applications? */
#cmakedefine CR_WITH_GLISH 1

/* Support for Python applications? */
#cmakedefine CR_WITH_PYTHON 1

/* Support for generation of plots? */
#cmakedefine CR_WITH_PLOTTING 1

/* Build the graphical interface? */
#cmakedefine CR_WITH_GUI 1

/* Enable additional routines from LOPES-Star? */
