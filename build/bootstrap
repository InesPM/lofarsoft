#!/bin/sh

basedir=`pwd`

##______________________________________________________________________________
## Check basic requirements: CMake and Git

cmakeSource=`ls $basedir/../external/cmake/cmake*.gz`

$basedir/../external/cmake/checkCMake.sh $cmakeSource $basedir/../release
$basedir/../external/git/checkGit.sh $basedir/../release

##______________________________________________________________________________
## Run CMake to define build targets

cd $basedir
rm -rf CMakeCache.txt
rm -rf CMakeFiles
rm -rf Makefile
cmake ..
