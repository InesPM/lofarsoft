#
# Gnuplot macro for plotting data generated by tShapelets1D
#

set grid
set xlabel 'x'
set ylabel 'phi[n](x)'
plot 'tShapelets1D.data1' u 1:2 t 'n=0' w l,\
	'tShapelets1D.data1' u 1:3 t 'n=1' w l,\
	'tShapelets1D.data1' u 1:4 t 'n=2' w l,\
	'tShapelets1D.data1' u 1:5 t 'n=3' w l,\
	'tShapelets1D.data1' u 1:6 t 'n=4' w l

pause -1

set xrange [0:]
replot 
pause -1
