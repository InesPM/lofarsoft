
set term pdf color solid enhanced
set output "tSpatialCoordinates.pdf"

##_______________________________________________________________________________
## Plot set of cartesian coordinates

set xlabel "x"
set ylabel "y"
set zlabel "z"

splot "positions-cartesian.dat" u 2:3:4

##_______________________________________________________________________________
## Plot set of spherical coordinates

set xlabel "theta"
set ylabel "phi"
set zlabel "r"

set angles degrees
set mapping spherical
set parametric

splot "positions-spherical.dat" u 3:4:2

##_______________________________________________________________________________
## Plot set of spherical coordinates

set xlabel "theta"
set ylabel "z"
set zlabel "r"

set angles degrees
set mapping cylindrical
set parametric

splot "positions-cylindrical.dat" u 3:4:2

##_______________________________________________________________________________
## Plot set of DirectionRadius coordinates

set xlabel "theta"
set ylabel "phi"
set zlabel "r"

set angles radians
set mapping spherical
set parametric

splot "positions-default.dat" u 2:3:4

splot "positions-azel-sin.dat" u 2:3:4

splot "positions-azel-stg.dat" u 2:3:4

splot "positions-azel-zea.dat" u 2:3:4

## combined plot

splot "positions-azel-sin.dat" u 2:3:4, "positions-azel-stg.dat" u 2:3:4, "positions-azel-zea.dat" u 2:3:4
