\newcommand\summary[1]{
  \begin{list}{$\blacksquare$}{}
  \item \underline{\sc Summary:} \\
    \sl #1 \hfill $\Box$
  \end{list}
}

\newcommand{\comment}[1]{%
  \begin{displaymath}
    \color{red}
    \mathbf{
      \left[
        \quad
        \begin{minipage}[c]{0.85\linewidth}
          \sl #1
        \end{minipage}
        \quad
      \right]
    }
    \message{NOTE: #1}
  \end{displaymath}
}

