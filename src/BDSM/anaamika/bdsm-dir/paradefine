fitsdir = '/data/anaamika/fits/' fits directory
scratch = '/data/anaamika/image/' scratch directory
srldir = '/data/anaamika/image/' source list directory
plotdir = '/Users/mohan/anaamika/plots/' plots directory
fitsname = 'm51.fits' name of fits file
solnname = 'vliet' id name for sourcelist
runcode = 'aq' (a)uto/(m)anual and (q)uiet/(v)erbose
gausshap = '10' fit gaussian, shapelets (1=fit; 0=dont fit); default=11=both
bmpersrc_th = 0 beams per source, 0 => calculate in prog
boxsize_th = 0 boxsize for rms image, 0 => calculate in prog
stepsize_th = 0 stepsize for rms image, 0 => calculate in prog
thresh = 'hard' hard or fdr pixel threshold, default => calculate from prog
fdr_alpha = 0.05 alpha value for FDR; 0  => set to 0.05 inside prog
thresh_pix = 0 pixel threshold in sigma, 0 => set to 5 inside prog 
thresh_isl = 0 island threshold in sigma, 0 => set to 3 inside prog 
minpix_isl = 0 minimum num of pixels per island, 0 => set to 4 inside prog
maxsize_beam = 0 maximum size of fitted gaussian in beam area, 0 => set to 10 inside prog
rms_map = 'const' take constant rms or rms map or existing, default => calculate in prog
mean_map = 'zero' const/zero/map/default for mean map. const=clipped mean; default = calc inside prog 
ch0plane = 0 plane of 3d image to extract from, 0 & invalid => collapsed image
fitfreely = 1 ; 1 = fit all gaussian parameters by default; 0 = fix size=beam
iniguess = 'default' 'all' - take all initial gaussians as guess, else 'default'
flagsmallsrc = 'false' 'true' - flag if src < 1/2beam; 'false' : keep 
BMAJ = 0.0 BMAJ (fwhm deg). If not in fits header, take this, and if bmaj=0, ask user
BMIN = 0.0 BMIN (fwhm deg). If not in fits header, take this, and if bmin=0, ask user
BPA = 0.0 BPA (deg). If not in fits header, take this, and if bpa=0, ask user
editor = 'gvim' editor
