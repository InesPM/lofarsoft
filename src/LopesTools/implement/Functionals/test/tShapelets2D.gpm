#
# Gnuplot macro for plotting data generated by tShapelets2D
#

set grid
set contour base 

set xlabel 'x'
set ylabel 'y'
set zlabel 'phi[l,m](x,y)'

# 0-th order

splot 'tShapelets2D.data1' u 3:4:5 t '(l,m)=(0,0)' w l
pause -1

# 1-st order

splot 'tShapelets2D.data1' u 3:4:6 t '(l,m)=(0,1)' w l
pause -1

splot 'tShapelets2D.data1' u 3:4:15 t '(l,m)=(1,0)' w l
pause -1

splot 'tShapelets2D.data1' u 3:4:16 t '(l,m)=(1,1)' w l
pause -1

# 2-nd order

splot 'tShapelets2D.data1' u 3:4:7 t '(l,m)=(0,2)' w l
pause -1
