F95 = @FC@
EXEEXT = @EXEEXT@

@pkg_config_true@LIB_TAG = @LIB_TAG@
@pkg_config_true@PKG_CONFIG_ENV = @PKG_CONFIG_ENV@
@pkg_config_true@RPATHCMD = @RPATHCMD@

EXECUTABLES_list = \
		 x01f$(EXEEXT) \
		 x02f$(EXEEXT) \
		 x03f$(EXEEXT) \
		 x04f$(EXEEXT) \
		 x05f$(EXEEXT) \
		 x06f$(EXEEXT) \
		 x07f$(EXEEXT) \
		 x08f$(EXEEXT) \
		 x09f$(EXEEXT) \
		 x10f$(EXEEXT) \
		 x11f$(EXEEXT) \
		 x12f$(EXEEXT) \
		 x13f$(EXEEXT) \
		 x14f$(EXEEXT) \
		 x15f$(EXEEXT) \
		 x16f$(EXEEXT) \
		 x16af$(EXEEXT) \
		 x17f$(EXEEXT) \
		 x18f$(EXEEXT) \
		 x19f$(EXEEXT) \
		 x22f$(EXEEXT) \
		 x23f$(EXEEXT) \
		 x28f$(EXEEXT) \
		 x29f$(EXEEXT) \
		 x30f$(EXEEXT) 

all: $(EXECUTABLES_list)

clean:
	rm -f $(EXECUTABLES_list)

.f90$(EXEEXT):
@pkg_config_true@	$(F95) @MODULESINCCMD@ $< -o $@ $(RPATHCMD) `$(PKG_CONFIG_ENV) pkg-config --cflags --libs plplot$(LIB_TAG)-f95`
@pkg_config_false@	$(F95) @MODULESINCCMD@ $< -o $@ `plplot-config --cflags --libs --with-f95`

.SUFFIXES: .f90 $(EXEEXT)
