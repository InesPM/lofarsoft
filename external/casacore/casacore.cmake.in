
## Installation location

set (CMAKE_INSTALL_PREFIX ${CMAKE_INSTALL_PREFIX} )

## FFTW3 library

set (USE_FFTW3          ${FFTW3_FOUND}     CACHE BOOL     )
set (FFTW3_INCLUDE_DIRS ${FFTW3_INCLUDES}  CACHE PATH     )
set (FFTW3_LIBRARIES    ${FFTW3_LIBRARIES} CACHE FILEPATH )

## HDF5 library

set (USE_HDF5           ${HDF5_FOUND}     CACHE BOOL     )
set (HDF5_INCLUDE_DIRS  ${HDF5_INCLUDES}  CACHE PATH     )
set (HDF5_LIBRARIES     ${HDF5_LIBRARIES} CACHE FILEPATH )

## WCSLIB

set (WCSLIB_INCLUDE_DIRS ${WCSLIB_INCLUDES}  )
set (WCSLIB_LIBRARIES    ${WCSLIB_LIBRARIES} )
